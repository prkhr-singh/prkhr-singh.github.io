source "https://rubygems.org"

# Pin to the GitHub Pages gem for local parity with Pages builds
gem "github-pages", group: :jekyll_plugins

# Needed for Ruby 3+ to run `jekyll serve`
gem "webrick", "~> 1.8"

# Explicitly include to match _config.yml (also bundled by github-pages)
gem "jekyll-remote-theme"

